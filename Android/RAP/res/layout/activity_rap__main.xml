<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rap.example.RAP_MainActivity" 
    android:orientation="vertical">

    <Button 
        android:id="@+id/user_sex"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="성별 정보 보내기"/>
    
    <Button 
        android:id="@+id/user_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="위치 정보 보내기"/>
    
    <Button 
        android:id="@+id/user_age"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="나이 정보 보내기"/>
    
    <Button 
        android:id="@+id/user_os"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="OS 정보 보내기"/>
    
    <Button 
        android:id="@+id/user_device"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Device 정보 보내기"/>
    
    <LinearLayout 
        android:layout_marginTop="100dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/page_001"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1"/>
        
        <Button 
            android:id="@+id/page_002"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="2"/>
        
        <Button 
            android:id="@+id/page_003"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="3"/>
        
        <Button 
            android:id="@+id/page_004"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="4"/>
        
        <Button 
            android:id="@+id/page_005"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="5"/>
        
    </LinearLayout>
    
</LinearLayout>
