package com.klt.view;

import java.io.IOException;
import java.util.ArrayList;

import org.apache.http.client.methods.HttpRequestBase;
import org.json.JSONArray;
import org.json.JSONException;
import org.json.JSONObject;

import android.app.Dialog;
import android.content.Context;
import android.os.Bundle;
import android.os.Handler;
import android.os.Message;
import android.widget.ListView;
import android.widget.Toast;

import com.klt.R;
import com.klt.connectior.KLTAPIs;
import com.klt.connectior.KLTHttpClient;
import com.klt.data.PointChargingInfo;
import com.klt.setting.Conf;
import com.klt.setting.Preference;

public class PointChargingListDialog extends Dialog{

	private Context mContext;
	
	private ListView lvCharginfList;
	private ArrayList<PointChargingInfo> adapterPointUsingList;
	private PointChargingListAdapter adapterPointCharging;
	
	public PointChargingListDialog(Context context) {
		super(context);
		mContext = context;
	}

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.dialog_point_charge);
		
		initResource();
		initEvent();
		
		try {
			HttpRequestBase req = KLTAPIs_Point.getPointChargeList(
					Preference.getPreferenceString(mContext, Conf.PREFERENCE_ID, "false")
					, Preference.getPreferenceString(mContext, Conf.PREFERENCE_PW, "false"));
			KLTHttpClient.getInstance().background(req, pointChargeList);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	private void initResource(){
		lvCharginfList = (ListView) findViewById(R.id.point_dia_charge_list);
		
		adapterPointUsingList = new ArrayList<PointChargingInfo>();
		//getDump();
	}
	
	private void initEvent(){
		
	}

	private void getDump(){
		adapterPointUsingList.add(new PointChargingInfo(1, "14.11.05", "10000원"));
		adapterPointUsingList.add(new PointChargingInfo(2, "14.11.05", "10000원"));
		adapterPointUsingList.add(new PointChargingInfo(3, "14.11.05", "10000원"));
		adapterPointUsingList.add(new PointChargingInfo(4, "14.11.05", "10000원"));
		adapterPointUsingList.add(new PointChargingInfo(5, "14.11.05", "10000원"));
		adapterPointUsingList.add(new PointChargingInfo(6, "14.11.05", "10000원"));
		adapterPointUsingList.add(new PointChargingInfo(7, "14.11.05", "10000원"));
		adapterPointUsingList.add(new PointChargingInfo(8, "14.11.05", "10000원"));
		adapterPointUsingList.add(new PointChargingInfo(9, "14.11.05", "10000원"));
		adapterPointUsingList.add(new PointChargingInfo(10, "14.11.05", "10000원"));
	}
	
	Handler pointChargeList = new Handler(){
		@Override
		public void handleMessage(Message msg){
			
			if(msg.what == -1) {
				Toast.makeText(mContext, "연결 실패 \n잠시후에 다시 시도해주세요.", Toast.LENGTH_SHORT).show();
				dismiss();
			}
			else{
				int status;
				try {
					JSONObject json = new JSONObject(msg.getData().getString("res"));
					status = json.getInt("httpStatusCode");
					
					switch (status) {
					case 200:
						JSONObject res = new JSONObject(json.getString("res"));
						JSONArray bills = new JSONArray(res.getString("bills"));
						
						for(int index = 0; index < bills.length();index++){
							JSONObject obj = bills.getJSONObject(index);
							adapterPointUsingList.add(new PointChargingInfo(obj.getInt("id"), "" + obj.getInt("created_at"), "" + obj.getInt("how_much") + "원"));
						}
						
						adapterPointCharging = new PointChargingListAdapter(mContext, adapterPointUsingList);
						lvCharginfList.setAdapter(adapterPointCharging);
						
						break;
					default:
						Toast.makeText(mContext, "알수없는 요청입니다. \n" + msg.getData().getString("res"), Toast.LENGTH_SHORT).show();
						break;
					}
				} catch (JSONException e) {
					e.printStackTrace();
				}
				
			}
		}
	};
	
}
