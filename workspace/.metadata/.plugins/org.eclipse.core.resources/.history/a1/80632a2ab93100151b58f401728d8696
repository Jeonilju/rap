package com.klt.activity;

import android.app.AlertDialog;
import android.content.DialogInterface;
import android.content.DialogInterface.OnClickListener;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemClickListener;
import android.widget.ArrayAdapter;
import android.widget.ListView;

import com.klt.BaseActivity;
import com.klt.R;

public class SettingActivity extends BaseActivity{

	private ListView settingMenuList;
	private ArrayAdapter<String> settingAdapter;
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		setContentView(R.layout.activity_setting_menu);
		setTitle(getString(R.string.setting));
		super.onCreate(savedInstanceState);
		
		initResource();
		initEvent();
	}

	private void initResource(){
		settingMenuList = (ListView) findViewById(R.id.setting_menu);
		settingAdapter = new ArrayAdapter<String>(SettingActivity.this, R.layout.simple_list_item_1);
		
		settingMenuList.setAdapter(settingAdapter);
		
		settingAdapter.add(" 월정액 만료일보기");
		settingAdapter.add(" 알람 설정");
		settingAdapter.add(" 관심지역 설정");
		settingAdapter.add(" 포인트 충전");
		settingAdapter.add(" 포인트 출금 신청");
		settingAdapter.add(" 회원 탈퇴");
	}
	
	private void initEvent(){
		settingMenuList.setOnItemClickListener(new OnItemClickListener() {

			@Override
			public void onItemClick(AdapterView<?> parent, View view,
					int position, long id) {
				switch (position) {
				case 0:
						
					break;
				case 1:

					break;
				case 2:
					Intent intent = new Intent(SettingActivity.this, InterestedActivity.class);
					startActivity(intent);
					break;
				case 3:

					break;
				case 4:

					break;
				case 5:

					break;

				default:
					break;
				}
			}
		});
	}
	
	private void ShowDig(String message){
		AlertDialog.Builder alt_bld = new AlertDialog.Builder(MainActivity.this);
		alt_bld.setMessage(message)
				.setCancelable(false)
				.setPositiveButton(getString(R.string.close),
						new DialogInterface.OnClickListener() {
							public void onClick(DialogInterface dialog,
									int id) {
								
							}
						});

		AlertDialog alert = alt_bld.create();
		alert.setTitle("");
		alert.show();
	}
	
	private void SignOutDig(){
		AlertDialog.Builder alt_bld = new AlertDialog.Builder(SettingActivity.this);
		alt_bld.setMessage("정말로 회원탈퇴하시겠습니까?")
				.setCancelable(false)
				.setPositiveButton("네",
						new OnClickListener() {
							public void onClick(DialogInterface dialog,
									int id) {
								
							}
						})
				.setNegativeButton("아니요", 
						new OnClickListener() {
							public void onClick(DialogInterface dialog, int which) {
								
							}
						});

		AlertDialog alert = alt_bld.create();
		alert.setTitle("회원 탈퇴");
		alert.show();
	}
}
