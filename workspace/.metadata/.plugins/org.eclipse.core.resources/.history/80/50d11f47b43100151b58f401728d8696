package com.klt.activity;

import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemClickListener;
import android.widget.ArrayAdapter;
import android.widget.ListView;

import com.klt.BaseActivity;
import com.klt.R;

public class SettingActivity extends BaseActivity{

	private ListView settingMenuList;
	private ArrayAdapter<String> settingAdapter;
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		setContentView(R.layout.activity_setting_menu);
		setTitle(getString(R.string.setting));
		super.onCreate(savedInstanceState);
		
		initResource();
		initEvent();
	}

	private void initResource(){
		settingMenuList = (ListView) findViewById(R.id.setting_menu);
		settingAdapter = new ArrayAdapter<String>(SettingActivity.this, android.R.layout.simple_list_item_1);
		
		settingMenuList.setAdapter(settingAdapter);
		
		settingAdapter.add("");
		settingAdapter.add("");
		settingAdapter.add("");
		settingAdapter.add("");
		settingAdapter.add("");
	}
	
	private void initEvent(){
		settingMenuList.setOnItemClickListener(new OnItemClickListener() {

			@Override
			public void onItemClick(AdapterView<?> parent, View view,
					int position, long id) {
				
			}
		});
	}
	
}
