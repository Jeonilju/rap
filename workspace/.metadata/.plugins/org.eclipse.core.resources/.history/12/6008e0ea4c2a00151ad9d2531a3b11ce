package com.klt.data;

public class OrderInfo {
	public int id;
	public String username;
	public String password;
	public String date;// (YYYY-MM-DD)
	public double ton;
	public int floor;
	public String phone;
	public String address;
	public String main_address;
	public String detail_address;
	public int price;
	public int status;
	
	public String oderer_commision;
	public String admin_commission;
	public String master_commission;
	
	public OrderInfo()
	{
		
	}
	
	public OrderInfo(int id, String main_address, String detail_address, int floor, double ton, String date, int price, int status) {
		this.id = id;
		this.main_address = main_address;
		this.detail_address = detail_address;
		this.floor = floor;
		this.ton = ton;
		this.date = date;
		this.price = price;
		this.status = status;
	}

	public int getPay() {
		return price;
	}

	// 0 - 작업 신청
	// 1 - 작업중
	// 2 - 작업 완료
	public int getState() {
		return status;
	}


	public int getHeight() {
		return floor;
	}
	public int getId()	{	return id;	}
	public double getTon()	{	return ton;	}
	public String getDate()	{	return date;	}
	public String getAddress() {
		return main_address;
	}
}
